@page
@model GeekPC.Pages.CartModel
@{
    ViewData["Title"] = "Корзина";
}
<div class="cart">
    <h1 style="
        background-color: #302c2c;
        border-radius: 10px 10px 0 0;
        color: white;
        padding: 1rem;
    ">Корзина</h1>
        @if (Model.Carts.Count > 0){
            <table class="table">
                <tbody>
                    <tr>
                        <td style="text-align:center; font-size: 20px;">Фото</td>
                        <td style="font-size: 20px;">Название</td>
                        <td style="font-size: 20px;">Цена</td>
                        <td></td>
                    </tr>   
        @foreach (var cart in Model.Carts)
        {                    
            <tr>
                <td style="max-width: 120px"> <img src="@($"data:image/png;base64, {cart.Item?.Images[0]?.FileData ?? string.Empty}")"/> </td>                               
                <td style="vertical-align:middle"><a style=" color: black; text-decoration: none; font-size: 24px;" href="@($"viewitem/{cart.Item.ID}")">@cart.Item.Name</a></td>
                <td style="vertical-align:middle"><div class="product-price" style="font-size: 24px;">@cart.Item.Price Р</div></td>
                <td style="vertical-align:middle"><input type="submit" value="Удалить" class="btn btn-danger" /></td>
            </tr>
        }       

        </tbody>
    </table>
    }
</div>
@if (Model.Carts.Count > 0)
            {
               <h2 style="text-align: center;"><a class="btn btn-success" href="#" role="button">Продолжить</a></h2>
                
            }
            else {
                <br />
                <h2 style="text-align: center;">В корзине пусто ;(</h2>
                <br />
                <br />
                <br />
                <h1 style="text-align: center;">Перейти в <a href="/Catalog" style="
                color: #000000;
                font-size: 36Px;
                font-weight: 600;
                text-decoration: underline;
                text-decoration-color: #ff8fa2;">КАТАЛОГ</a></h1> 
            }