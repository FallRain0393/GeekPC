@page
@model GeekPC.Pages.Items.IndexModel

@{
    ViewData["Title"] = "Главная";
}
<section class="main-content">
      <div class="container">

<h1>Главная</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Создать</a>
</p>

<form>
    <p>
        Категория:<select asp-for="ItemName" asp-items="Model.Category">
            <option value="">Все</option>
        </select>
        Название: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Поиск" class="btn btn-dark" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Descr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].DatePublication)
            </th>          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Item) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePublication)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-primary">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-info">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger">Удаление</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</section>
